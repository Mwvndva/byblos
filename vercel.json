{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://byblos-atelier-api.onrender.com/api/$1"
    },
    {
      "source": "/seller/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/_next/static/(?:[^/]+/pages|pages|chunks|runtime|css|media)/.+",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/favicon.ico",
      "headers": {
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "https://byblos-atelier-api.onrender.com/api/$1"
    },
    {
      "src": "/seller/(.*)",
      "dest": "/"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
